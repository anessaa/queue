<%- include('../_partials/head') %>
<%- include('../_partials/navInstructor') %>
<main class="container">
    <button class="btn btn-light"><a href="/quizzes">Back</a></button><br>
    <div class="make-question">
      <div class="head-left">
        <h1 class="quizShow"> <%= quiz.name %></h1>&nbsp;&nbsp;<button id="editForm" class="btn btn-sm btn-warning" onclick="editQuizName()">Change Quiz Name</button><br>
        <div class="edit-quiz-name">
          <form action="/quizzes/<%= quiz.id %>?_method=put" method="post">
          <input type="text" value="<%= quiz.name %>" name="name">
          <input type="submit" value="submit">
        </form>
      </div>
        <form action="/instructors/quizzes/<%= quiz.id %>/cohort/53" method="POST">
          <input type="text" value="Enter Cohort" name="cohort">
          <input class="btn btn-sm btn-success" type="submit" value="Assign to Cohort">
        </form><br>
      </div>
    </div>
  <div class="make-question">
    <button class="btn btn-lg"><a href='/quizzes/<%= quiz.id %>/questions/new'>Make a Question</a></button>
  </div>
  </div>
  <br>
  <% if (!currentUser.instructor) { %> 
    <a  class="cl-effect-21" href='/quizzes/questions/<%= quiz.questions[0].id %>'><button>start quiz</button></a>
  <% } %>
  <div class="make-question list-questions">
    <div class="head-left">
      <h2 class="questions-header">Questions</h2>
      <div class="make-quesion:">
      <ol>
        <% quiz.questions.forEach((question) => { %>
        <% if(currentUser && currentUser.instructor) { %>
          <li>&nbsp&nbsp<a href='/quizzes/questions/<%= question.id %>'><%= question.question %></a></li>
        <% } else { %>
          <li>&nbsp&nbsp<%= question.question %></li>
        <% } %>
        <% if(currentUser && currentUser.instructor) { %>
          <form action="/quizzes/<%= quiz.id %>?_method=DELETE" method="POST">
            <input class="btn btn-danger btn-sm " type="submit" value="Delete">
          </form>
        <% } %>
  <% }) %>
      </ol>
      </div>
    </div>
  </div>
</div>
</main>
<%- include('../_partials/footer') %>
